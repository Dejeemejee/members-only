<h1>All Posts</h2>

<% @posts.each do |post| %>
<div>
    <ul>
        <div class="post-<%= post.id %>">
            <% if user_signed_in? %>
             <p><strong>Author: </strong> <%= post.user.name %></p>
            <% end %>
            <li>
                <h2><%= post.title %></h2>
            </li>
            <li>
                <p><%= post.body %></p>
            </li>
            <li><%= post.created_at.strftime("%B %d, %Y") %></li>
            <li><%= post.updated_at.strftime("%B %d, %Y") %></li>
        </div>
    </ul>
          

</div>
<% end %>

<%= link_to "Create New Post", new_post_path%>